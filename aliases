alias -s amend 'commit --amend'
alias -s amend-all 'stage && amend'
alias -s assume 'git update-index --assume-unchanged'
alias -s boot2bios 'systemctl reboot --firmware-setup'
alias -s clean 'git reset --hard'
alias -s clone 'git clone'
alias -s commit 'git commit'
alias -s commit-all 'stage && commit'
alias -s copy 'xclip -selection clipboard'
alias -s current 'git branch --show-current'
alias -s done 'pull && push'
alias -s logs 'git log -80 --color --graph --pretty=format:"%C(red)%h%C(reset)%C(yellow)%d%Creset %s %C(green italic)(%cr)%C(reset) %C(blue)%an%C(reset) %C(white dim)%GK %C(reset)" --abbrev-commit | less -R'
alias -s merge 'git merge'
alias -s move 'git checkout'
alias -s noassume 'git update-index --no-assume-unchanged'
alias -s paste 'xclip -selection clipboard -o'
alias -s pull 'git pull origin (current)'
alias -s push 'git push origin (current)'
alias -s save 'stage && commit -m ":WIP: save point"'
alias -s show 'git show --compact-summary --patch HEAD'
alias -s stage 'git add -A'
alias -s stash 'git stash'
alias -s state 'git status -sb'
alias -s unstage 'git reset'
alias -s untracked 'git clean --dry-run -d'
alias -s upstream 'commit-all && done'

abbr -a sys systemctl
abbr -a vpn 'sudo openvpn --config /home/rishi/client.ovpn'
